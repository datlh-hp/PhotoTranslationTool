<metro:MetroWindow x:Class="PhotoTranslationTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Translation Tool" Height="600" Width="566"
        GlowBrush="{DynamicResource AccentColorBrush}"
        Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
        Foreground="{DynamicResource MahApps.Brushes.Text}"
        TitleForeground="White"  
        Icon="/Assets/translation_exists_icon_143678.ico"

    >
    
    <DockPanel Margin="10">

        <!-- Thanh công cụ trên cùng -->
        <Border BorderBrush="#CC6459DF" DockPanel.Dock="Top" BorderThickness="1" CornerRadius="10"  Margin="0,0,0,10">
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="🖼️ Select photo" Width="123" Height="35" FontSize="12" Margin="5" BorderBrush="#CC6459DF" Click="SelectImage_Click"/>
                    <Button Content="📋 Paste" Width="86" FontSize="12" Margin="5" BorderBrush="#CC6459DF" Click="PasteButton_Click"/>
                    <Button Content="🌐 Translate" Width="110" FontSize="12" Margin="5" BorderBrush="#CC6459DF" Click="TranslateButton_Click"/>
                    <Border BorderBrush="#CC6459DF" BorderThickness="1" CornerRadius="5" Margin="5" >
                        <ComboBox x:Name="LangComboBox" Width="111" FontSize="12"  BorderThickness="0" SelectedIndex="0" SelectionChanged="LangComboBox_SelectionChanged">
                            <ComboBoxItem Content="Tiếng Việt (vi)" Tag="vi"/>
                            <ComboBoxItem Content="English (en)" Tag="en"/>
                            <ComboBoxItem Content="한국어 (ko)" Tag="ko"/>
                            <ComboBoxItem Content="日本語 (ja)" Tag="ja"/>
                            <ComboBoxItem Content="中文 (zh)" Tag="zh"/>
                        </ComboBox>
                    </Border>
                    <Button Content="Simple" Width="61" FontSize="12" Margin="5" BorderBrush="#CC6459DF" Click="ChangeStyleButton_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Nội dung chính chia 2 cột -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <!-- Vùng hiển thị ảnh -->
            <GroupBox Header="🖼️ Image" Margin="5">

                <Border Grid.Column="0" BorderBrush="{DynamicResource MahApps.Brushes.GrayBrush}" BorderThickness="1" Margin="5" Background="{DynamicResource MahApps.Brushes.ControlBackgroundBrush}">
                    <ScrollViewer>
                        <Image x:Name="SelectedImage" Stretch="Uniform" AllowDrop="True" Drop="SelectedImage_Drop"/>
                    </ScrollViewer>
                </Border>
            </GroupBox>

            <!-- Vùng text OCR + dịch -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Text OCR -->
                <GroupBox Header="📝 OCR Text" Grid.Row="0" Margin="5">
                    <TextBox x:Name="OcrTextBox" TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto" FontSize="15" Padding="8"
                             Background="{DynamicResource MahApps.Brushes.TextBoxBackgroundBrush}"
                             Foreground="White"/>
                </GroupBox>

                <!-- Splitter -->
                <GridSplitter Grid.Row="1" Height="6" HorizontalAlignment="Stretch" Background="{DynamicResource MahApps.Brushes.GrayBrush}"/>

                <!-- Kết quả dịch -->
                <GroupBox Header="🌐 Translated Text" Grid.Row="2" Margin="5">
                    <TextBox x:Name="TranslatedTextBox" TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto" FontSize="15" Padding="8"
                             Background="{DynamicResource MahApps.Brushes.TextBoxBackgroundBrush}"
                             Foreground="White" IsReadOnly="True"/>
                </GroupBox>
            </Grid>
        </Grid>
    </DockPanel>
</metro:MetroWindow>