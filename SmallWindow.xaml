<metro:MetroWindow x:Class="PhotoTranslationTool.SmallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoTranslationTool"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="SmallWindow" Height="450" Width="450"
        GlowBrush="{DynamicResource AccentColorBrush}"
        Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
        Foreground="{DynamicResource MahApps.Brushes.Text}"
        TitleForeground="White"  
        Icon="/Assets/translation_exists_icon_143678.ico" 
        AllowsTransparency="True" Opacity="1"
 
    >
    
    <DockPanel Margin="10">
        <GroupBox Grid.Row="2">
            <GroupBox.Header>
                <DockPanel LastChildFill="True" Height="34">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <Slider x:Name="OpacitySlider" VerticalAlignment="Center" 
                                Minimum="0.2" Maximum="1.0" Value="0.7"
                                TickFrequency="0.1" IsSnapToTickEnabled="True"
                                ValueChanged="OpacitySlider_ValueChanged" Width="100" Height="22"></Slider>

                        <Button Content="Back" Width="60" Height="22" VerticalAlignment="Center" Margin="10,0,0,0" Click="BackButton_Click"/>
                        <Button Content="Lock" Width="60" Height="22" VerticalAlignment="Center" Margin="10,0,0,0" Click="LockButton_Click"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Text="🌐 Translated Text" VerticalAlignment="Center" FontWeight="Bold"  DockPanel.Dock="Left"/>
                    </StackPanel>
                </DockPanel>
            </GroupBox.Header>

            <TextBox x:Name="TranslatedTextBox"
                 TextWrapping="Wrap" AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto" IsReadOnly="True"
                 FontSize="15" Padding="8" Foreground="White"
                 Background="{DynamicResource MahApps.Brushes.TextBoxBackgroundBrush}" />
        </GroupBox>


    </DockPanel>
</metro:MetroWindow>
